{
  "configurations": {
    "cpptools-gdb": {
      "adapter": "vscode-cpptools",
      "default": true,
      "filetypes": [
        "cpp",
        "c",
        "objc",
        "rust"
      ],
      "variables": {
        "BUILDME": {
          "shell": "g++ -o ${workspaceRoot}/${fileBasenameNoExtension}.obj -g -std=c++17 ${workspaceRoot}/${fileBasename}"
        }
      },
      "configuration": {
        "request": "launch",
        "program": "${workspaceRoot}/${fileBasenameNoExtension}.obj",
        "stopAtEntry": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      },
      "breakpoints": {
        "exception": {
          "all": "",
          "cpp_catch": "",
          "cpp_throw": "",
          "objc_catch": "",
          "objc_throw": "",
          "swift_catch": "",
          "swift_throw": ""
        }
      }
    },
    "debugpy": {
      "adapter": "debugpy",
      "filetypes": [
        "python"
      ],
      "configuration": {
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "debugOptions": [],
        "program": "${workspaceRoot}/${fileBasename}"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  }
}
